@model Team_Project_4.Models.Taikhoan

@{
    ViewData["Title"] = "Login";
}
<div class="form-login">
<div class="mainSTT">
    <h1 class="nameHotel">SEE HORIZON HOTEL</h1>
    <p class="STT">Ở đây chúng tôi cung cấp cho bạn những căn phòng thiết kế hiện đại và sang trọng nhất!</p>
</div>
<div class="form-loginContainer">
<h1 class="text-center">Đăng nhập</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        <p style="color:red;">@ViewBag.error</p>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Tentknv" class="control-label">Tài khoản</label>
                <input asp-for="Tentknv" class="form-control" />
                <span asp-validation-for="Tentknv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mktk" class="control-label">Mật khẩu</label>
                <div class="input-group">
                    <input asp-for="Mktk" class="form-control" type="password" id="passwordInput" />
                </div>
                <span asp-validation-for="Mktk" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Đăng nhập" class="btn btn-primary float-md-end" />
            </div>
        </form>
    </div>
</div>
</div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
